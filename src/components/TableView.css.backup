.table-view {
  width: 100%;
}

.table-controls {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-4);
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--space-4);
  padding: var(--space-4);
  background: var(--color-bg-secondary);
  border-radius: var(--radius-md);
}

.search-bar {
  flex: 1;
  min-width: 200px;
}

.search-input {
  width: 100%;
  padding: var(--space-2) var(--space-3);
  border: 1px solid var(--color-border-default);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  transition: all var(--transition-fast);
}

.search-input:focus {
  outline: 2px solid var(--color-accent-primary);
  outline-offset: 2px;
  border-color: var(--color-accent-primary);
}

.table-info {
  color: var(--color-text-secondary);
  font-size: var(--font-size-sm);
}

.pagination-controls select {
  margin-left: var(--space-2);
  padding: var(--space-1) var(--space-2);
  border: 1px solid var(--color-border-default);
  border-radius: var(--radius-sm);
}

.table-container {
  overflow-x: auto;
  border: 1px solid var(--color-border-default);
  border-radius: var(--radius-md);
  background: var(--color-bg-primary);
}

.ap-table {
  width: 100%;
  border-collapse: collapse;
  font-size: var(--font-size-sm);
}

.ap-table thead {
  background: var(--color-table-header-bg);
  position: sticky;
  top: 0;
  z-index: var(--z-sticky);
}

.ap-table th {
  padding: var(--space-3) var(--space-4);
  text-align: left;
  font-weight: var(--font-weight-semibold);
  border-bottom: 2px solid var(--color-border-default);
  white-space: nowrap;
  user-select: none;
}

.ap-table th.pinned-col {
  position: sticky;
  left: 0;
  background: var(--color-table-header-bg);
  z-index: calc(var(--z-sticky) + 1);
  box-shadow: 2px 0 4px rgba(0, 0, 0, 0.05);
}

.ap-table th:first-child {
  left: 0;
}

.ap-table th:nth-child(2) {
  left: 80px;
}

.ap-table th:nth-child(3) {
  left: 280px;
}

.ap-table td {
  padding: var(--space-3) var(--space-4);
  border-bottom: 1px solid var(--color-border-muted);
}

.ap-table td.pinned-col {
  position: sticky;
  background: var(--color-bg-primary);
  z-index: var(--z-base);
  box-shadow: 2px 0 4px rgba(0, 0, 0, 0.05);
}

.ap-table td:first-child {
  left: 0;
}

.ap-table td:nth-child(2) {
  left: 80px;
}

.ap-table td:nth-child(3) {
  left: 280px;
}

.ap-table tbody tr:hover td {
  background: var(--color-table-row-hover);
}

.ap-table tbody tr.selected td {
  background: var(--color-table-row-selected);
  border-left: 3px solid var(--color-accent-primary);
}

.select-btn {
  padding: var(--space-1) var(--space-3);
  border: 1px solid var(--color-border-default);
  border-radius: var(--radius-sm);
  background: var(--color-bg-primary);
  cursor: pointer;
  transition: all var(--transition-fast);
  font-weight: var(--font-weight-medium);
}

.select-btn:hover {
  background: var(--color-accent-subtle);
  border-color: var(--color-accent-primary);
}

.select-btn.selected {
  background: var(--color-accent-primary);
  color: var(--color-text-inverse);
  border-color: var(--color-accent-primary);
}

.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-4);
  padding: var(--space-4);
}

.pagination button {
  padding: var(--space-2) var(--space-4);
  border: 1px solid var(--color-border-default);
  border-radius: var(--radius-md);
  background: var(--color-bg-primary);
  cursor: pointer;
  transition: all var(--transition-fast);
}

.pagination button:hover:not(:disabled) {
  background: var(--color-accent-subtle);
  border-color: var(--color-accent-primary);
}

.pagination button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

@media (max-width: 768px) {
  .table-controls {
    flex-direction: column;
    align-items: stretch;
  }
  
  .ap-table {
    font-size: var(--font-size-xs);
  }
  
  .ap-table th,
  .ap-table td {
    padding: var(--space-2);
  }
}
